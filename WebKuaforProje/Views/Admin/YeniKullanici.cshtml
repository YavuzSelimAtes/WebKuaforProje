@model WebKuaforProje.Data.Kullanici

<h2>Yeni Kullanıcı Ekle</h2>

<form asp-action="YeniKullanici" method="post" class="form-container">
    <div class="form-group">
        <label asp-for="Ad">Ad</label>
        <input asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Soyad">Soyad</label>
        <input asp-for="Soyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="TelefonNo">Telefon No</label>
        <input asp-for="TelefonNo" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="KullaniciAdi">Kullanıcı Adı</label>
        <input asp-for="KullaniciAdi" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Sifre">Şifre</label>
        <input asp-for="Sifre" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Rol">Rol Seçimi</label>
        <select class="form-control" id="Rol" name="Rol" required>
            <option value="Müşteri">Müşteri</option>
            <option value="Personel">Personel</option>
        </select>
    </div>
    <div id="PersonelBilgileri" style="display: none;">
        <div class="form-group">
            <label asp-for="Personel.Subesi">Şube</label>
            <select id="Subesi" name="Personel.Subesi" class="form-control" required>
                @foreach (var sube in ViewBag.Subeler)
                {
                    <option value="@sube.Sehir">@sube.Sehir</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Personel.UzmanlikAlani">Uzmanlık Alanı</label>
            <input asp-for="Personel.UzmanlikAlani" class="form-control" required />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

<script>
        document.getElementById("Rol").addEventListener("change", function () {
        var rol = this.value;
        var PersonelBilgileri = document.getElementById("PersonelBilgileri");

        if (rol === "Personel") {
            PersonelBilgileri.style.display = "block";
        } else {
            PersonelBilgileri.style.display = "none";
        }
    });
</script>
