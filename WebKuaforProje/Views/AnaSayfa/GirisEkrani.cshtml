@if (ViewBag.Hata != null)
{
    <div style="color: red; font-weight: bold; text-align: center;">
        @ViewBag.Hata
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap ve Kaydol</title>
    <style>
        /* Kapsayıcı */
        .btn-container {
            position: fixed; /* Sağ üst köşeye sabitler */
            top: 10px; /* Üstten boşluk */
            right: 10px; /* Sağdan boşluk */
            display: flex; /* Butonları yan yana koyar */
            gap: 10px; /* Butonlar arası boşluk */
            z-index: 1000; /* Üstte görünmesini sağlar */
        }

        /* Dropdown Form */
        .dropdown-form {
            display: none; /* Başlangıçta gizli */
            position: absolute; /* Butona göre konumlanır */
            top: 100%; /* Butonun hemen altından başlar */
            right: 0; /* Sağ kenara hizalar */
            width: 250px; /* Form genişliği */
            background-color: #fff;
            border: 1px solid #ccc;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            padding: 10px;
        }

        /* Hover ile formu göster */
        .btn-wrapper:hover .dropdown-form {
            display: block; /* Hover olunca formu göster */
        }

        .btn-wrapper {
            position: relative; /* Her butonun kendi referans noktası var */
        }
    </style>
</head>
<body>
    <!-- Sağ Üst Köşedeki Butonlar -->
    <div class="btn-container">
        <!-- Giriş Yap -->
        <div class="btn-wrapper">
            <button type="button" class="btn btn-primary">
                Giriş Yap
            </button>
            <div class="dropdown-form">
                <h5 class="text-center">Kullanıcı Girişi</h5>
                <form action="#" method="post">
                    <div class="mb-3">
                        <label for="girisKullaniciAdi">Kullanıcı Adı</label>
                        <input type="text" name="kullaniciAdi" class="form-control" id="girisKullaniciAdi" required />
                    </div>
                    <div class="mb-3">
                        <label for="girisSifre">Şifre</label>
                        <input type="password" name="sifre" class="form-control" id="girisSifre" required />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Giriş Yap</button>
                </form>
            </div>
        </div>

        <!-- Kaydol -->
        <div class="btn-wrapper">
            <button type="button" class="btn btn-secondary">
                Kaydol
            </button>
            <div class="dropdown-form">
                <h5 class="text-center">Kayıt Ol</h5>
                <form asp-action="Kaydol" asp-controller="AnaSayfa" method="post">
                    <div class="mb-3">
                        <label for="kayitAd">Ad</label>
                        <input type="text" name="ad" class="form-control" id="kayitAd" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitSoyad">Soyad</label>
                        <input type="text" name="soyad" class="form-control" id="kayitSoyad" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitTel">Telefon</label>
                        <input type="tel" name="tel" class="form-control" id="kayitTel" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitKullaniciAdi">Kullanıcı Adı</label>
                        <input type="text" name="kullaniciAdi" class="form-control" id="kayitKullaniciAdi" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitSifre">Şifre</label>
                        <input type="password" name="sifre" class="form-control" id="kayitSifre" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Kaydol</button>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
