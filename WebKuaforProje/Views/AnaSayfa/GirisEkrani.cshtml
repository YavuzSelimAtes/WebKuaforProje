@if (ViewBag.Hata != null)
{
    <div style="color: red; font-weight: bold; text-align: center;">
        @ViewBag.Hata
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap Butonu</title>
    <style>
        /* Sağ üst köşeye sabitleme */
        .btn-container {
            position: fixed; /* Sayfanın sağ üst köşesine sabitler */
            top: 10px; /* Üstten 10 piksel boşluk */
            right: 10px; /* Sağdan 10 piksel boşluk */
            z-index: 1000; /* Üstte görünmesini sağlar */
        }

        /* Dropdown Form */
        .dropdown-form {
            display: none; /* Başlangıçta gizli */
            position: absolute; /* Butona göre konumlanır */
            top: 100%; /* Butonun hemen altından başlar */
            right: 0; /* Sağ kenara hizalanır */
            width: 250px; /* Form genişliği */
            background-color: #fff;
            border: 1px solid #ccc;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            padding: 10px;
        }

        /* Dropdown Form Hover ile Gösterme */
        .btn-container:hover .dropdown-form {
            display: block; /* Hover olunca görünür */
        }
    </style>
</head>
<body>
    <!-- Sağ Üst Köşedeki Buton ve Form -->
    <div class="btn-container">
        <!-- Giriş Yap Butonu -->
        <button type="button" class="btn btn-primary">
            Giriş Yap
        </button>

        <!-- Altında Açılacak Form -->
        <div class="dropdown-form">
            <h5 class="text-center">Kullanıcı Girişi</h5>
            <form action="#" method="post">
                <div class="mb-3">
                    <label for="kullaniciAdi">Kullanıcı Adı</label>
                    <input type="text" name="kullaniciAdi" class="form-control" id="kullaniciAdi" required />
                </div>
                <div class="mb-3">
                    <label for="sifre">Şifre</label>
                    <input type="password" name="sifre" class="form-control" id="sifre" required />
                </div>
                <button type="submit" class="btn btn-success w-100">Giriş Yap</button>
            </form>
        </div>
    </div>
</body>
</html>
