@if (ViewBag.Hata != null)
{
    <div style="color: red; font-weight: bold; text-align: center;">
        @ViewBag.Hata
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap ve Kaydol</title>
    <link rel="stylesheet" href="site.css">
</head>
<body>
    <div class="btn-container">
        <div class="btn-wrapper">
            <button type="button" class="btn btn-primary">Giriş Yap</button>
            <div class="dropdown-form">
                <h5 class="text-center">Kullanıcı Girişi</h5>
                <form action="#" method="post">
                    <div class="mb-3">
                        <label for="girisKullaniciAdi">Kullanıcı Adı</label>
                        <input type="text" name="kullaniciAdi" class="form-control" id="girisKullaniciAdi" required />
                    </div>
                    <div class="mb-3">
                        <label for="girisSifre">Şifre</label>
                        <input type="password" name="sifre" class="form-control" id="girisSifre" required />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Giriş Yap</button>
                </form>
            </div>
        </div>
        <div class="btn-wrapper">
            <button type="button" class="btn btn-secondary">Kaydol</button>
            <div class="dropdown-form">
                <h5 class="text-center">Kayıt Ol</h5>
                <form asp-action="Kaydol" asp-controller="AnaSayfa" method="post">
                    <div class="mb-3">
                        <label for="kayitAd">Ad</label>
                        <input type="text" name="ad" class="form-control" id="kayitAd" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitSoyad">Soyad</label>
                        <input type="text" name="soyad" class="form-control" id="kayitSoyad" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitTel">Telefon</label>
                        <input type="tel" name="tel" class="form-control" id="kayitTel" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitKullaniciAdi">Kullanıcı Adı</label>
                        <input type="text" name="kullaniciAdi" class="form-control" id="kayitKullaniciAdi" required />
                    </div>
                    <div class="mb-3">
                        <label for="kayitSifre">Şifre</label>
                        <input type="password" name="sifre" class="form-control" id="kayitSifre" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Kaydol</button>
                </form>

            </div>
        </div>
    </div>
</body>
</html>

<script>
    document.getElementById("subelerimizButton").addEventListener("click", function () {
        var menu = document.getElementById("subelerimizMenu");
        menu.style.display = menu.style.display === "none" ? "block" : "none";
    });
</script>

